include ../config
include ../docsConfig
block config

append config
  - var prismjs = prismjs || false
  - var highlightjs = highlightjs || false
  - var bsbjs = bsbjs || false
  - var bodyClass = bodyClass || ''
  - var cssFile = package.codeName

doctype html
html(lang= lang)
  head
    include ./top

    link(rel="canonical" href="/templates/"+slug+"/")

    block ExtraHeader

body(class=bodyClass)
  div(class= superClass + " templatePage")
    block content

  if bsbjs
    script(src=path+"js/bundle.js" type="module")
